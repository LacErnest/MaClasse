{% extends 'base.html.twig' %}

{% block title %}Enseignement index{% endblock %}

{% block body %}
    <h1>Enseignement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignement in enseignements %}
            <tr>
                <td>{{ enseignement.id }}</td>
                <td>{{ enseignement.status ? 'Yes' : 'No' }}</td>
                <td>{{ enseignement.createdAt ? enseignement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ enseignement.updatedAt ? enseignement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('enseignement_show', {'id': enseignement.id}) }}">show</a>
                    <a href="{{ path('enseignement_edit', {'id': enseignement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enseignement_new') }}">Create new</a>
{% endblock %}
